            0% {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1) rotate(0deg);
            }
            100% {
                opacity: 0;
                transform: translate(
                    calc(-50% + var(--tx)),
                    calc(-50% + var(--ty))
                ) scale(0.5) rotate(var(--rotation));
            }
        }

        @keyframes badge-bounce {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.5) rotate(10deg); }
        }

